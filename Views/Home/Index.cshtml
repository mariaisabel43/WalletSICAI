@{
    ViewData["Title"] = "Panel de Administración";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Menu Principal</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

    <!-- CSS propio -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="admin-body">

    <div class="d-flex min-vh-100">

        <!-- SIDEBAR -->
        <nav class="admin-sidebar">
            <h4 class="sidebar-title">Wallet SICAI</h4>

            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Menú Principal
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="DatosEstudiantes" asp-action="Buscar">
                        <i class="fa-solid fa-magnifying-glass"></i> Consulta de Saldo
                    </a>
                </li>

                <li class="nav-item">
                     <a class="nav-link" asp-controller="RecargarSaldo" asp-action="Recargar">
                         <i class="fa-solid fa-wallet"></i> Recargar Saldo
                     </a>
                 </li>


                <li class="nav-item">
                    <a class="nav-link" asp-controller="Historial" asp-action="BuscarEstudiante">
                        <i class="fa-solid fa-clock-rotate-left"></i> Historial Recargas Estudiante
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reportes" asp-action="FormularioReportes">
                        <i class="fa-solid fa-file-pdf"></i> Reportes Historial Recargas
                    </a>
                </li>
            </ul>

            <div class="sidebar-bottom">
                <a class="nav-link" href="#">
                    <i class="fa-solid fa-gear"></i> Settings
                </a>
                <a class="nav-link logout" asp-controller="Cuenta" asp-action="Logout">
                    <i class="fa-solid fa-right-from-bracket"></i> Log Out
                </a>
            </div>
        </nav>

        <!-- CONTENIDO -->
        <main class="admin-main flex-grow-1">
            <h2 class="mb-4 text-white">Panel de Administración</h2>

            <div class="row g-4">

                <!-- CARD CONSULTA SALDO -->
                <div class="col-md-4">
                    <a asp-controller="DatosEstudiantes" asp-action="Buscar" class="text-decoration-none">
                        <div class="card admin-card text-center">
                            <div class="card-body">
                                <i class="fa-solid fa-magnifying-glass fa-2x text-primary"></i>
                                <h5 class="card-title mt-3">Consulta de Saldo</h5>
                            </div>
                        </div>
                    </a>
                </div>


                <!-- CARD Recarga -->
                <div class="col-md-4">
                    <a asp-controller="RecargarSaldo" asp-action="Recargar" class="text-decoration-none">
                        <div class="card admin-card text-center">
                            <div class="card-body">
                                <i class="fa-solid fa-wallet fa-2x text-success"></i>
                                <h5 class="card-title mt-3">Recargar Saldo</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- CARD HISTORIAL -->
                <div class="col-md-4">
                    <a asp-controller="Historial" asp-action="BuscarEstudiante" class="text-decoration-none">
                        <div class="card admin-card text-center">
                            <div class="card-body">
                                <i class="fa-solid fa-clock-rotate-left fa-2x text-warning"></i>
                                <h5 class="card-title mt-3">Historial de Recargas por Estudiante</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- CARD HISTORIAL General -->
                <div class="col-md-4">
                    <a asp-controller="Reportes" asp-action="FormularioReportes" class="text-decoration-none">
                        <div class="card admin-card text-center">
                            <div class="card-body">
                                <i class="fa-solid fa-file-pdf fa-2x" style="color:#c81e4a;"></i>
                                <h5 class="card-title mt-3">Reportes Historial Recargas</h5>
                            </div>
                        </div>
                    </a>
                </div>


            </div>
        </main>

    </div>

</body>
</html>
