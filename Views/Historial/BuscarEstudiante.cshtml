@model List<WalletSICAI.Models.Estudiante>

@{
    ViewData["Title"] = "Buscar Estudiante";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Buscar Estudiante</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- CSS propio -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body class="admin-body">

    <div class="d-flex">

        <!-- ================= SIDEBAR ================= -->
        <nav class="admin-sidebar">
            <h4 class="sidebar-title">Wallet SICAI</h4>

            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Menú Principal
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="DatosEstudiantes" asp-action="Buscar">
                        <i class="fa-solid fa-magnifying-glass"></i> Consulta de Saldo
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="RecargarSaldo" asp-action="Recargar">
                        <i class="fa-solid fa-wallet"></i> Recargar Saldo
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Historial" asp-action="BuscarEstudiante">
                        <i class="fa-solid fa-clock-rotate-left"></i> Historial Recargas Estudiante
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Reportes" asp-action="FormularioReportes">
                        <i class="fa-solid fa-file-pdf"></i> Reportes Historial Recargas
                    </a>
                </li>
            </ul>

            <div class="sidebar-bottom">
                @* <a class="nav-link" href="#">
                    <i class="fa-solid fa-gear"></i> Settings
                </a> *@
                <a class="nav-link logout" asp-controller="Cuenta" asp-action="Logout">
                    <i class="fa-solid fa-right-from-bracket"></i> Log Out
                </a>
            </div>
        </nav>

        <!-- ================= CONTENIDO ================= -->
        <main class="admin-main flex-grow-1 p-5">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-white mb-0">Historial de Recargas - Busqueda</h2>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">
                    <i class="fa-solid fa-arrow-left me-2"></i> Volver al menú
                </a>
            </div>

            <!-- CARD BUSQUEDA -->
            <div class="search-card">
                <h5 class="text-white mb-3">Buscar Estudiante</h5>

                <form asp-action="BuscarEstudiante" method="post">
                    <div class="mb-3">
                        <input type="text"
                               name="buscar"
                               class="form-control search-input"
                               placeholder="Ingrese la cédula o el nombre del estudiante"
                               required />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa-solid fa-magnifying-glass me-2"></i> Buscar
                    </button>
                </form>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-warning mt-3">
                        @ViewBag.Error
                    </div>
                }
            </div>

            <!-- RESULTADOS -->
            @if (Model != null && Model.Any())
            {
                <div class="results-card">

                    <h5 class="text-white mb-3">Resultados encontrados</h5>

                    @foreach (var estudiante in Model)
                    {
                        <div class="result-item d-flex justify-content-between align-items-center">
                            <span class="text-primary">
                                <strong>@estudiante.EstudianteCedula</strong>
                                – @estudiante.EstudianteNombreCompleto
                            </span>

                            <a asp-action="HistorialEstudiante"
                               asp-route-cedula="@estudiante.EstudianteCedula"
                               asp-route-nombreCompleto="@estudiante.EstudianteNombreCompleto"
                               class="btn btn-outline-info btn-sm">
                                Ver historial
                            </a>
                        </div>
                    }
                </div>
            }

        </main>
    </div>

</body>
</html>

