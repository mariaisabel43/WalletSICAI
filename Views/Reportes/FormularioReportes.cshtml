@using WalletSICAI.viewModels
@model IEnumerable<SolicitanteViewModel>

@{
    ViewData["Title"] = "Reporte de Recargas";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Reporte de Recargas</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- CSS propio -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="admin-body">
    <div class="d-flex min-vh-100">

        <!-- SIDEBAR -->
        <nav class="admin-sidebar">
            <h4 class="sidebar-title">Wallet SICAI</h4>

            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Menú Principal
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="DatosEstudiantes" asp-action="Buscar">
                        <i class="fa-solid fa-magnifying-glass"></i> Consulta de Saldo
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="RecargarSaldo" asp-action="Recargar">
                        <i class="fa-solid fa-wallet"></i> Recargar Saldo
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Historial" asp-action="BuscarEstudiante">
                        <i class="fa-solid fa-clock-rotate-left"></i> Historial Recargas Estudiante
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" asp-controller="Reportes" asp-action="FormularioReportes">
                        <i class="fa-solid fa-file-pdf"></i> Reportes Historial Recragas
                    </a>
                </li>
            </ul>

            <div class="sidebar-bottom">
                <a class="nav-link">
                    <i class="fa-solid fa-gear"></i> Settings
                </a>
                <a class="nav-link logout">
                    <i class="fa-solid fa-right-from-bracket"></i> Log Out
                </a>
            </div>
        </nav>

        <!-- CONTENIDO -->
        <main class="admin-main flex-grow-1 p-5">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-white mb-0">
                    <i class="fa-solid fa-file-pdf me-2" style="color:#c81e4a;"></i>
                    Reporte del Historial de Recargas
                </h2>

                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">
                    <i class="fa-solid fa-arrow-left me-2"></i> Volver al menú
                </a>
            </div>

            <!-- CARD -->
            <div class="recarga-container text-white p-4 rounded-4 mx-auto" style="max-width: 520px;">

                <h5 class="mb-4 text-primary text-center">
                    <i class="fa-solid fa-calendar-days me-2"></i>
                    Generar reporte por fecha
                </h5>

                <form asp-controller="Reportes"
                      asp-action="RecargasPorRango"
                      method="get"
                      class="recarga-form">

                    <div class="form-group"> 
                        <label for="fechaInicio">Fecha inicio:</label> 
                        <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" required /> 
                    </div> 
                    <div class="form-group"> 
                        <label for="fechaFin">Fecha fin (opcional):</label>
                        <input type="date" id="fechaFin" name="fechaFin" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="solicitante">Solicitante (opcional):</label> 
                        <select id="solicitante" name="solicitante" class="form-control">
                            <option value="">-- Seleccione un solicitante --</option>
                            @foreach (var s in Model) 
                            { 
                                <option value="@s.SolicitanteRecargaCedula">@s.SolicitanteRecargaNombreCompleto (@s.SolicitanteRecargaCedula)</option>
                            } 
                        </select> 
                    </div>
                   
                    @*<div class="mb-4">
                        <label class="form-label">Seleccione la fecha</label>
                        <input type="date"
                               name="fecha"
                               class="form-control"
                               required />
                    </div>

                    @* <div class="row mb-4">
                        <div class="col-md-6 mb-3 mb-md-0">
                            <label class="form-label">
                                <i class="fa-solid fa-calendar-day me-1"></i>
                                Fecha inicio
                            </label>
                            <input type="date"
                                   name="fechaInicio"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="fa-solid fa-calendar-check me-1"></i>
                                Fecha fin
                            </label>
                            <input type="date"
                                   name="fechaFin"
                                   class="form-control"
                                   required />
                        </div>
                    </div> *@


                    <div class="d-grid">
                        <button type="submit" class="btn btn-danger">
                            <i class="fa-solid fa-download me-2"></i>
                            Descargar Reporte PDF
                        </button>
                    </div>

                </form>

                <p class="text-secondary text-center mt-4 mb-0" style="font-size: 0.9rem;">
                    El reporte se descargará automáticamente en formato PDF.
                </p>

            </div>

        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
