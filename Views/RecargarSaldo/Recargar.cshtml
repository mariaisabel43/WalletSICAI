@using WalletSICAI.viewModels
@model RecargaViewModel

@{
    ViewData["Title"] = "Recargar saldo";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Recargar Saldo</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- CSS propio -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="admin-body">
    <div class="d-flex min-vh-100">

        <!-- SIDEBAR -->
        <nav class="admin-sidebar">
            <h4 class="sidebar-title">Wallet SICAI</h4>

            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Menú Principal
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="DatosEstudiantes" asp-action="Buscar">
                        <i class="fa-solid fa-magnifying-glass"></i> Consulta de Saldo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="RecargarSaldo" asp-action="Recargar">
                        <i class="fa-solid fa-wallet"></i> Recargar Saldo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Historial" asp-action="BuscarEstudiante">
                        <i class="fa-solid fa-clock-rotate-left"></i> Historial Recargas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fa-solid fa-calendar"></i> Historial General de Recargas
                    </a>
                </li>
            </ul>

            <div class="sidebar-bottom">
                <a class="nav-link">
                    <i class="fa-solid fa-gear"></i> Settings
                </a>
                <a class="nav-link logout">
                    <i class="fa-solid fa-right-from-bracket"></i> Log Out
                </a>
            </div>
        </nav>

        <!-- CONTENIDO -->
        <main class="admin-main flex-grow-1 p-5">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-white mb-0">Recargar Saldo</h2>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">
                    <i class="fa-solid fa-arrow-left me-2"></i> Volver al menú
                </a>
            </div>
            

            <!-- CARD -->
            <div class="recarga-container text-white p-4 rounded-4 mx-auto" style="max-width: 720px;">

               @*  @if (ViewBag.Exito != null)
                {
                    <div class="alert alert-success mt-3 text-center">
                        @ViewBag.Exito
                    </div>
