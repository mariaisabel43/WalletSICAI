                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger mt-3 text-center">
                        @ViewBag.Error
                    </div>
                } *@

                @if (TempData["Exito"] != null)
                {
                    <div class="position-fixed top-0 end-0 p-3" style="z-index: 9999;">
                        <div id="toastExito" class="toast align-items-center text-bg-success border-0 show" role="alert">
                            <div class="d-flex">
                                <div class="toast-body">
                                    <i class="fa-solid fa-circle-check me-2"></i>
                                    @TempData["Exito"]
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                        setTimeout(function () {
                            var toast = document.getElementById('toastExito');
                            if (toast) {
                                toast.classList.remove('show');
                            }
                        }, 3000);
                    </script>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="position-fixed top-0 end-0 p-3" style="z-index: 9999;">
                        <div id="toastError" class="toast align-items-center text-bg-danger border-0 show" role="alert">
                            <div class="d-flex">
                                <div class="toast-body">
                                    <i class="fa-solid fa-circle-xmark me-2"></i>
                                    @TempData["Error"]
                                </div>
                            </div>
                        </div>
                    </div>

                    <script>
                        setTimeout(function () {
                            var toast = document.getElementById('toastError');
                            if (toast) {
                                toast.classList.remove('show');
                            }
                        }, 3000);
                    </script>
                }


                @* <form asp-action="Recargar" method="post"> *@
                <form asp-action="Recargar" method="post" id="recargaForm" class="recarga-form">

                    <input type="hidden" asp-for="EstudianteId" />

                    <!-- DATOS ESTUDIANTE -->
                    <h5 class="mb-3 text-primary">
                        <i class="fa-solid fa-user-graduate me-2"></i> Datos del estudiante
                    </h5>
                    <!-- Si vienen datos del modal, se muestran como solo lectura -->
                    @if (!string.IsNullOrEmpty(Model.EstudianteCedula))
                    {
                        <p><strong>Cédula:</strong> @Model.EstudianteCedula</p>
                        <p><strong>Nombre:</strong> @Model.EstudianteNombreCompleto</p>
                        <input type="hidden" asp-for="EstudianteCedula" />
                        <input type="hidden" asp-for="EstudianteNombreCompleto" />
                    }
                    else
                    {
                        <!-- Si no vienen datos, el usuario debe llenarlos -->
                        <div class="mb-3">
                            <label>Cédula del estudiante</label>
                            <input name="EstudianteCedula" class="form-control text-white border-0"
                                   placeholder="Ej: 1-2345-6789" required />
                        </div>
                        <div class="mb-3">
                            <label>Nombre completo del estudiante</label>
                            <input name="EstudianteNombreCompleto" class="form-control text-white border-0"
                                   placeholder="Ej: Juan Pérez" />
                        </div>
                    }
                    <!--
                @* <form asp-action="Recargar" method="post" class="card p-4 recarga-form"> *@
                <form asp-action="Recargar" method="post" class="recarga-form">
                @* <form asp-action="Recargar" method="post"  class="card p-4 bg-dark text-white recarga-form"> *@


                     DATOS ESTUDIANTE
                    <h5 class="mb-3 text-primary">
                        <i class="fa-solid fa-user-graduate me-2"></i> Datos del estudiante
                    </h5>
