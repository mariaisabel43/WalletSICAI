@model WalletSICAI.Models.Recarga

@{
    ViewData["Title"] = "Recargar saldo";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Recargar Saldo</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- CSS propio -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body class="admin-body">
    <div class="d-flex min-vh-100">

        <!-- SIDEBAR -->
        <nav class="admin-sidebar">
            <h4 class="sidebar-title">Wallet SICAI</h4>

            <ul class="nav flex-column mt-4">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="fa-solid fa-house"></i> Menú Principal
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="DatosEstudiantes" asp-action="Buscar">
                        <i class="fa-solid fa-magnifying-glass"></i> Consulta de Saldo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" asp-controller="RecargarSaldo" asp-action="Recargar">
                        <i class="fa-solid fa-wallet"></i> Recargar Saldo
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Historial" asp-action="BuscarEstudiante">
                        <i class="fa-solid fa-clock-rotate-left"></i> Historial Recargas
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <i class="fa-solid fa-calendar"></i> Historial General de Recargas
                    </a>
                </li>
            </ul>

            <div class="sidebar-bottom">
                <a class="nav-link">
                    <i class="fa-solid fa-gear"></i> Settings
                </a>
                <a class="nav-link logout">
                    <i class="fa-solid fa-right-from-bracket"></i> Log Out
                </a>
            </div>
        </nav>

        <!-- CONTENIDO -->
        <main class="admin-main flex-grow-1 p-5">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-white mb-0">Recargar Saldo</h2>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light">
                    <i class="fa-solid fa-arrow-left me-2"></i> Volver al menú
                </a>
            </div>

            <!-- CARD -->
            <div class="recarga-container text-white p-4 rounded-4 mx-auto" style="max-width: 720px;">

                @* <form asp-action="Recargar" method="post" class="card p-4 recarga-form"> *@
                <form asp-action="Recargar" method="post" class="recarga-form">
                @* <form asp-action="Recargar" method="post"  class="card p-4 bg-dark text-white recarga-form"> *@


                    <!-- DATOS ESTUDIANTE -->
                    <h5 class="mb-3 text-primary">
                        <i class="fa-solid fa-user-graduate me-2"></i> Datos del estudiante
                    </h5>

                    <div class="mb-3">
                        <label class="form-label">Nombre completo del estudiante</label>
                        <input name="EstudianteNombreCompleto" class="form-control bg-black text-white border-0"
                               placeholder="Ej: Juan Pérez" />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Cédula del estudiante</label>
                        <input name="EstudianteCedula" class="form-control bg-black text-white border-0"
                               placeholder="Ej: 1-2345-6789" required />
                    </div>

                    <!-- SOLICITANTE -->
                    <h5 class="mb-3 text-primary">
                        <i class="fa-solid fa-user me-2"></i> Datos del solicitante
                    </h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Nombre</label>
                            <input asp-for="SolicitanteRecargaNombre"
                                   class="form-control bg-black text-white border-0"
                                   placeholder="Ej: María" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Apellido</label>
                            <input asp-for="SolicitanteRecargaApellido"
                                   class="form-control bg-black text-white border-0"
                                   placeholder="Ej: García" required />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Cédula del solicitante</label>
                        <input asp-for="SolicitanteRecargaCedula"
                               class="form-control bg-black text-white border-0"
                               placeholder="Ej: 0987654321" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Correo electrónico</label>
                        <input asp-for="SolicitanteRecargaEmail"
                               type="email"
                               class="form-control bg-black text-white border-0"
                               placeholder="Ej: correo@ejemplo.com" />
                    </div>

                    <!-- RECARGA -->
                    <h5 class="mb-3 text-primary">
                        <i class="fa-solid fa-coins me-2"></i> Detalles de la recarga
                    </h5>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Monto</label>
                            <input asp-for="MontoRecarga" type="number"
                                   class="form-control bg-black text-white border-0"
                                   placeholder="₡ 0.00" required />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Modo de pago</label>
                            <select asp-for="ModoPagoRecarga"
                                    class="form-select bg-black text-white border-0" required>
                                <option value="Efectivo">Efectivo</option>
                                <option value="Tarjeta">Tarjeta</option>
                                <option value="Transferencia">Transferencia</option>
                            </select>
                        </div>
                    </div>

                    <!-- BOTONES -->
                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary w-100 mb-2">
                            <i class="fa-solid fa-wallet me-2"></i> Realizar recarga
                        </button>
                    </div>

                </form>

                @if (TempData["Exito"] != null)
                {
                    <div class="alert alert-success mt-3 text-center">
                        @TempData["Exito"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger mt-3 text-center">
                        @TempData["Error"]
                    </div>
                }

            </div>

        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
